<div class="container">
<h1>Le mot le plus long</h1>

<div class="grid">

<p>Voici une grille</p>

<div class="letters">
  <%= @letters.join('.')%>
</div>

<form action="/score" method="post" data-turbo="false">
 <label for="word">Tapez un mot : </label>
 <input type="text" name="word" placeholder="Enter your word">
 <button type="submit">Play</button>
 <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
